{
  "compilerOptions": {
    "outFile": "../dist/bundle.js",  // Unir todo en un solo archivo
    "module": "amd",                 // 'outFile' solo funciona con 'amd' o 'system'
    "target": "es2016",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["./public/src/**/*.ts"],
  "exclude": ["dist"]
}
